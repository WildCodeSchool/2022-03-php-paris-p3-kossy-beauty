{% extends 'base.html.twig' %} 

{% block title %}Service{% endblock %} 

{% block body %}
<div class="container-prov text-center">
<h1>{{ service.name }}</h1>

{% for providerService in providerServices %} 
<div class="d-inline-flex">
    {% for provider in provider.getProviderById(providerService.provider.id) %}
        <div class="card text-center mx-2 p-0 mb-3" style="width:20rem";>
            <div class="favorite text-secondary text-end pe-2 pt-1">
                <a class="text-secondary" href="#"><i class="bi bi-star fs-4"></i></a>
            </div>
            <div class="d-flex flex-column align-items-center text-center">
                {% if provider.image %}
                <img class="profile-image rounded-circle" src="{{ vich_uploader_asset(provider) }}" alt="Profile picture of the provider">
                {% else %}
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                  </svg>
                {% endif %}
            </div>
            <div class="card-body">
                <a href="{{ path('app_provider_services_list', {id: provider.id }) }}"><h6 class="card-title text-break">{{ provider.companyName }}</h6></a>
                
                <p class="fw-bold">
                    <span class="text-primary"
                        ><i class="bi bi-wallet2"></i>
                        {{ providerService.price }} â‚¬</span
                    >
                    | <i class="bi bi-clock-history"></i>
                    {{ providerService.duration }} minutes
                </p>
            </div>
            <div class="card-footer">
                {% if app.user.roles.1 is defined %}
                {% elseif app.user is defined %}
                    <a href="{{ path('app_create_conversation', {id: provider.id, service: service.name}) }}" class="btn btn-success" role="button">Envoyer un message</a>
                {% elseif not app.user %}
                    <a href="{{ path('login') }}" class="btn btn-success" role="button">Envoyer un message</a>
                {% endif %}
            </div>
        </div>
    {% endfor %} 
</div>
{% endfor %} 
</div>
{% endblock %}
