{% extends 'base.html.twig' %}

{% block title %}ProviderService index{% endblock %}

{% block body %}

<div class="d-flex gap-4 align-items-end mb-4 ps-3">
    <div><img class="rounded-circle" width="150px" src="{{ vich_uploader_asset(user) }}" alt="Profile picture of the provider"></div>
    <div>
        <h1>{{user.companyName}}</h1>
        <p class="mb-0">{{user.town}}</p>
        <p class="mb-0">{{user.district}}</p>
    </div>
</div>
<div class="ms-3gi">
    {{ user.companyDescription }}
</div>
{% if is_granted("ROLE_PROVIDER") and user.id == app.user.id %}
<div class="d-flex d-md-block justify-content-center">
    <a class="ms-3 btn btn-outline-secondary" href="{{ path('app_user_edit', {'id': user.id}) }}">Editer votre description <i class="bi bi-pen"></i></a>
</div>
{% endif %}
<div class="accordion" id="accordionExample">
    <div class="">
        <div class="d-md-flex justify-content-center">
            <h2 class="" id="headingOne">
                <button class="btn-prov d-block mx-auto btn btn-light bg-white border-dark mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Prestations
                </button>
            </h2>
            <h2 class="" id="headingThree">
                <button class="btn-prov d-block mx-auto btn btn-light bg-white border-dark collapsed mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                Gallerie
                </button>
            </h2>
        </div>
        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                {% if is_granted("ROLE_PROVIDER") and user.id == app.user.id %}
                    <div class="container px-0">
                        <div class="d-none d-md-flex rounded-pill fw-bolder">
                            <p class="col-3 mt-3 ms-3 text-center">Prestation</p>
                            <div class="d-flex col-4 justify-content-around mt-3">
                                <p>Prix</p>
                                <p>Durée</p>
                            </div>
                        </div>
                    </div>
                    <div class="container px-0">

                    {% for service in services %}
                        <div class="service_card d-block d-md-flex border border-dark mb-4 rounded-pill border-1">
                            <p class="col-12 col-md-3 mt-3 ms-md-3 my-md-3 mb-0 fw-bold text-center">{{ service.service.name }}</p>
                            <div class="d-flex col-12 col-md-4 col-md-4 justify-content-around mt-md-3 mt-1 text-center mb-2">
                                <p class="mb-md-3 mb-0">{{ service.price }} €</p>
                                <p class="mb-md-3 mb-0">{{ service.duration }} minutes</p>
                            </div>
                            <div class="d-flex col-4 justify-content-center gap-3 mx-auto">
                                <p class="mt-3"><a class="d-inline-block btn-prov border border-dark text-decoration-none p-1 rounded text-dark" style="width:5rem" href="{{ path('app_service_edit', {'id': service.service.id}) }}">Editer <i class="bi bi-pen"></i></a></p>
                                <form method="post" action="{{ path('app_service_delete', {'id': service.service.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.service.id) }}">
                                    <button class="btn-prov delete-btn btn border border-dark border-1 mt-3 pb-1" style="width:7rem">Supprimer <i class="bi bi-trash"></i></button>
                                </form>
                            </div>
                        </div>  
                    {% endfor %}
                {% else %}
                    <div class="container px-0 d-flex justify-content-center">
                        <div class="col-7 d-none d-md-flex rounded-pill fw-bolder">
                            <p class="col-5 mt-3 ms-3 text-center">Prestation</p>
                            <div class="d-flex col-4 justify-content-around mt-3">
                                <p>Prix</p>
                                <p>Durée</p>
                            </div>
                        </div>
                    </div>
                    <div class="container px-0 d-flex flex-wrap justify-content-center">
                    {% for service in services %}
                        <div class="service_card d-block col-7 d-md-flex border border-dark mb-4 rounded-pill border-1">
                            <p class="col-12 col-md-5 mt-3 ms-md-3 my-md-3 mb-0 fw-bold text-center">{{ service.service.name }}</p>
                            <div class="d-flex col-12 col-md-4 justify-content-around mt-md-3 mt-1 text-center mb-2">
                                <p class="mb-md-3 mb-0">{{ service.price }} €</p>
                                <p class="mb-md-3 mb-0">{{ service.duration }} minutes</p>
                            </div>
                        </div>  
                    {% endfor %}
                {% endif %}
                </div>
            </div>
            {% if is_granted("ROLE_PROVIDER") and user.id == app.user.id  %}
                <h2 class="" id="headingTwo">
                    <button class="btn-prov btn btn-light bg-white border-dark ms-3" type="button">
                    <a class="text-dark text-decoration-none" href="{{ path('app_provider_service_new') }}">Ajouter une prestation<i class="bi bi-plus"></i></a>
                    </button>
                </h2>
            {% endif %}
        </div>
    </div>
    <div class="">
        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                {% if is_granted("ROLE_PROVIDER") and user.id == app.user.id %}
                <a class="btn btn-outline-success" href="{{ path('app_catalog_new') }}">Ajouter une photo</a>
                {% endif %}
                <div>
                    <div class="d-flex flex-wrap container justify-content-center ">
                        {% for catalog in catalogs %}
                        {% if catalog.user.id == user.id %}
                        <img src="{{ vich_uploader_asset(catalog) }}" alt="Photography from the provider catalog" class="card-img-top rounded-circle w-25"/>
                        {% endif %}
                        {% if is_granted("ROLE_PROVIDER") and user.id == app.user.id %}
                        <form method="post" action="{{ path('app_catalog_delete', {'id': catalog.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ catalog.id) }}">
                            <button class="btn color-red"><i class="bi bi-x-circle"></i></button>
                        </form>
                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
         </div>
    </div>
</div>
{% endblock %}
