{% extends 'base.html.twig' %}

{% block title %}ProviderService index{% endblock %}

{% block body %}

<div class="d-flex gap-4 align-items-center mb-4 ps-3">
    <div><img class="profile-image rounded-circle" src="{{ vich_uploader_asset(user) }}" alt="Profile picture of the provider"></div>
    <div>
        <p style="font-size:1.5rem;">{{user.companyName}}</p>
        <p class="mb-0">{{user.town}}</p>
        <p class="mb-0">{{user.district}}</p>
    </div>
</div>
<div class="ms-3">
    {{ user.companyDescription }}
</div>
{% if is_granted("ROLE_PROVIDER") and user.id == app.user.id %}
<div class="d-flex d-md-block justify-content-center">
    <a class="ms-3 btn btn-outline-secondary" href="{{ path('app_user_edit', {'id': user.id}) }}">Editer votre description <i class="bi bi-pen"></i></a>
</div>
{% endif %}
<div class="accordion" id="accordionExample">
    <div class="">
        <div class="d-flex justify-content-center gap-2">
            <h2 class="" id="headingOne">
                <button class="btn-prov d-block mx-auto btn btn-light bg-white border-dark mt-2 me-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Prestations
                </button>
            </h2>
            <h2 class="" id="headingThree">
                <button class="btn-prov d-block mx-auto btn btn-light bg-white border-dark collapsed mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                Gallerie
                  </button>
            </h2>
        </div>
        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                {% if is_granted("ROLE_PROVIDER") and user.id == app.user.id %}
                    <div class="container px-0">
                        <div class="d-none d-md-flex rounded-pill fw-bolder">
                            <p class="col-3 mt-3 ms-3 text-center">Prestation</p>
                            <div class="d-flex col-4 justify-content-around mt-3">
                                <p>Prix</p>
                                <p>Durée</p>
                            </div>
                        </div>
                    </div>
                    <div class="container px-0">
                    {% for service in services %}
                        <div class="service_card d-block d-md-flex border border-dark mb-4 rounded border-1">
                            <p class="col-12 col-md-3 mt-3 ms-md-3 my-md-3 mb-0 fw-bold text-center">{{ service.service.name }}</p>
                            <div class="d-flex col-12 col-md-4 col-md-4 justify-content-around mt-md-3 mt-1 text-center mb-2">
                                <p class="mb-md-3 mb-0"><i class="bi bi-wallet2"></i> {{ service.price }} €</p>
                                <p class="mb-md-3 mb-0"><i class="bi bi-clock-history"></i> {{ service.duration }} minutes</p>
                            </div>
                            <div class="d-flex col-4 justify-content-center gap-3 mx-auto">
                                <p class="mt-3"><a class="btn-prov border border-dark text-decoration-none p-1 rounded text-dark" href="{{ path('app_provider_service_edit', {'id': service.id}) }}">Editer <i class="bi bi-pen"></i></a></p>
                                <form method="post" action="{{ path('app_provider_service_delete', {'id': service.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                                    <button class="btn btn-danger mt-2"><i class="bi bi-trash"></i></button>
                                </form>
                            </div>
                        </div>  
                    {% endfor %}
                {% else %}
                    <div class="container px-0 d-flex justify-content-center">
                        <div class="col-10 d-none d-md-flex rounded-pill fw-bolder">
                            <p class="col-3 mt-3 ms-3 text-center">Prestation</p>
                            <div class="d-flex col-4 justify-content-around mt-3">
                                <p>Prix</p>
                                <p>Durée</p>
                            </div>
                        </div>
                    </div>
                    <div class="container px-0 d-flex flex-wrap justify-content-center">
                    {% for service in services %}
                        <div class="service_card d-block col-10 d-md-flex border border-dark mb-4 rounded border-1">
                            <p class="col-12 col-md-3 mt-3 ms-md-3 my-md-3 mb-0 fw-bold text-center">{{ service.service.name }}</p>
                            <div class="d-flex col-12 col-md-4 justify-content-around mt-md-3 mt-1 text-center mb-2">
                                <p class="mb-md-3 mb-0"><i class="bi bi-wallet2"></i> {{ service.price }} €</p>
                                <p class="mb-md-3 mb-0"><i class="bi bi-clock-history"></i> {{ service.duration }} minutes</p>
                            </div>
                            <div class="col-md-4 pb-1 pb-md-0 pt-md-3 text-center">
                                <div class="d-inline-block d-md-none">
                                    {% if app.user.roles.1 is defined %}
                                    {% elseif app.user is defined %}
                                        <a href="{{ path('app_create_conversation', {id: user.id, service: service.service.name}) }}" class="btn btn-success" role="button"><i class="bi bi-envelope-fill"></i>
                                        </a>
                                    {% elseif not app.user %}
                                        <a href="{{ path('login') }}" class="btn btn-success" role="button"><i class="bi bi-envelope-fill"></i>
                                        </a>
                                    {% endif %}
                                </div>
                                <div class="d-none d-md-inline-block">
                                    {% if app.user.roles.1 is defined %}
                                    {% elseif app.user is defined %}
                                        <a href="{{ path('app_create_conversation', {id: user.id, service: service.service.name}) }}" class="btn btn-success" style="width:190px;" role="button">Envoyer un message</a>
                                    {% elseif not app.user %}
                                        <a href="{{ path('login') }}" class="btn btn-success" role="button">Envoyer un message</a>
                                    {% endif %} 
                                </div>
                            </div>
                        </div>  
                    {% endfor %}
                {% endif %}
                </div>
            </div>
            {% if is_granted("ROLE_PROVIDER") and user.id == app.user.id  %}
                <h2 class="" id="headingTwo">
                    <button class="btn-prov btn btn-light bg-white border-dark ms-3" type="button">
                    <a class="text-dark text-decoration-none" href="{{ path('app_provider_service_new') }}">Ajouter une prestation<i class="bi bi-plus"></i></a>
                    </button>
                </h2>
            {% endif %}
        </div>
    </div>
    <div class="">
        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                {% if is_granted("ROLE_PROVIDER") and user.id == app.user.id %}
                <a class="btn btn-outline-success mb-2" href="{{ path('app_catalog_new') }}">Ajouter une photo</a>
                {% endif %}
                <div>
                    <div class="d-flex flex-wrap container justify-content-center ">
                        {% for photo in catalog %}
                        <img src="{{ vich_uploader_asset(photo) }}" alt="Photography from the provider catalog" class="card-img-top w-25 rounded img-fluid"/>
                        {% if is_granted("ROLE_PROVIDER") and user.id == app.user.id %}
                        <form method="post" action="{{ path('app_catalog_delete', {'id': photo.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ photo.id) }}">
                            <button class="btn color-red"><i class="bi bi-x-circle"></i></button>
                        </form>
                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
         </div>
    </div>
</div>
{% endblock %}  
