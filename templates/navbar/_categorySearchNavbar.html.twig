<div class="container">
    <ul
        class="nav nav-tabs d-flex justify-content-center"
        id="myTab"
        role="tablist"
    >
        {% for category in categories.getAll %}
        <li class="nav-item" role="presentation">
            <button
                class="nav-link"
                id="profile-tab"
                data-bs-toggle="tab"
                data-bs-target="#category{{ category.id }}"
                type="button"
                role="tab"
                aria-controls="profile-tab-pane"
                aria-selected="false"
            >
                {{ category.name }}
            </button>
        </li>
        {% endfor %}
    </ul>
    <div class="tab-content d-flex justify-content-center" id="myTabContent">
        {% for category in categories.getAll %}

        <div
            class="tab-pane fade"
            id="category{{ category.id }}"
            role="tabpanel"
            aria-labelledby="profile-tab"
            tabindex="0"
        >
            {% for service in services.getServiceByCategoryId(category.id) %}
            <a
                href="{{
                    path('app_provider_service_show_provider_by_service', {
                        id: service.id
                    })
                }}"
                >{{ service.name }}</a
            >
            {% endfor %}
        </div>
        {% endfor %}
    </div>
</div>
