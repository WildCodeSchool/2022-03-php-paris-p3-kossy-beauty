<h2 class="text-center fw-bold pb-3">Sélections du jour</h2>
<div class="row m-1">
    {% for provider in selectedProvider %}
        <div class="col">
            <div class="card top-provider mb-2 mb-md-3 border-0 position-relative">
                <i class="icon-reward bi bi-award-fill color-gray fs-2 position-absolute end-0 me-2"></i>
                <div class="row g-0">
                    <div class="col-4 d-flex justify-content-center align-items-center border b-1">
                        {% if provider[0].provider.image %}
                            <img src="{{ vich_uploader_asset(provider[0].provider) }}" alt="" class="img-fluid object-fit-cover h-100"/>
                        {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                            </svg> 
                        {% endif %}
                    </div>
                    <div class="col-8 border border-start-0 rounded-end">
                        <div class="card-body h-100">
                            <h6 class="card-title">{{ provider[0].service.name }}</h6>
                            <p class="card-text">
                                <span class="d-block smalltext">
                                    <i class="bi bi-person-fill"></i> {{ provider[0].provider.companyName }}
                                </span>
                                <span class="d-block smalltext">
                                    <i class="bi bi-geo-alt-fill"></i> {{ provider[0].provider.district }}, {{ provider[0].provider.town }}
                                </span>
                                <span class="d-block smalltext description">
                                    <i class="bi bi-card-text"></i> {{ provider[0].provider.companyDescription }} bla bla bla bla
                                </span>
                                <div class="price-duration">
                                    <span class="badge bg-success fw-bold">
                                        <i class="bi bi-wallet2"></i>
                                        {{ provider[0].price }} €
                                    </span>
                                    <span class="badge bg-secondary fw-bold">
                                        <i class="bi bi-clock-history"></i>
                                        {{ provider[0].duration }} mins
                                    </span>
                                </div>
                            </p>
                            <div class="row top-provider-bottom w-100">
                                <div class="col-7">
                                    <p class="card-text"><small class="text-muted d-none d-md-inline">{{ provider[0].service.category.name }}</small></p>
                                </div>
                                <div class="col-5 text-end">
                                    <a class="btn btn-secondary-kb btn-to-service btn-sm stretched-link" href="{{ path('app_provider_services_list', {'id': provider[0].provider.id}) }}"><span class="d-none d-md-inline">Découvrir</span> <i class="bi bi-chevron-right fw-bolder"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col">
            <div class="card mx-auto mb-3 w-75 text-center">
                <div class="row g-0 align-items-center">
                    <div class="col-md-4">
                        <img src="{{ asset('build/images/pedicurefail1.jpg') }}" class="img-fluid rounded-start" alt="Aucun prestataire trouvé">
                    </div>  
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">
                                <span class="d-block">Il n'y a pas de prestataires en avant pour le moment !</span>
                                <span class="d-block">Ils seront disponibles très prochainement.</span>
                            </p>
                            <p class="card-text"><small class="text-muted">Mise à jour le {{ "now"|date('d-m-Y') }}</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>