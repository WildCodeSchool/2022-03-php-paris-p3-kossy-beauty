{% extends 'base-login.html.twig' %}

{% block title %}Création d'un compte professionnel{% endblock %}

{% block body %}
<section id="register-form" class="position-relative h-100">
    <div class="row d-flex align-items-center">
        <div class="col col-xl-11">
            <div class="card">
                <div class="row g-0">

                    <div class="col-md-6 col-lg-5 d-none d-lg-block" >
                        <img src="https://i.ibb.co/YhKpqv2/Capture-d-e-cran-2022-07-04-a-15-34-47.png"
                            alt="Sample photo" class="img-fluid image-register" style="height:100vh" />
                    </div>

                    <div class="col-auto col-md-7 d-md-flex mt-4 mt-lg-0 mx-auto">
                        <div class="card-body p-4 p-lg-5 text-black">
                            <div class="mb-3 pb-1 text-center text-md-start">
                                <span class="h1 fw-bold mb-0">Kossy Beauty</span>
                            </div>
                            <h5 class="fw-normal mb-3 pb-3 text-center text-md-start" style="letter-spacing: 1px;">
                                <i class="bi bi-briefcase-fill"></i> | Compte Pro - Ajouter votre entreprise
                            </h5>

                            {{ form_start(proRegistrationForm, {attr: {'novalidate': 'novalidate'}}) }}
                            {{ form_errors(proRegistrationForm) }}

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        {{ form_widget(proRegistrationForm.firstname, {'attr': {'class':
                                        'form-control
                                        form-control-lg'}}) }}
                                        <label class="form-label" for="form3Example1m">Prénom</label>
                                        {{ form_errors(proRegistrationForm.firstname) }}
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        {{ form_widget(proRegistrationForm.lastname, {'attr': {'class':
                                        'form-control
                                        form-control-lg'}}) }}
                                        <label class="form-label" for="form3Example1n">Nom</label>
                                        {{ form_errors(proRegistrationForm.lastname) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        {{ form_widget(proRegistrationForm.telephone, {'attr': {'class':
                                        'form-control
                                        form-control-lg'}}) }}
                                        <label class="form-label" for="form3Example1m1">Téléphone <span class="color-red">(Whatsapp requis !)</span></label>
                                        {{ form_errors(proRegistrationForm.telephone) }}
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        {{ form_widget(proRegistrationForm.email, {'attr': {'class': 'form-control
                                        form-control-lg'}}) }}
                                        <label class="form-label" for="form3Example1n1">Email</label>
                                        {{ form_errors(proRegistrationForm.email) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <div class="d-flex">
                                            {{ form_widget(proRegistrationForm.plainPassword.first, {'attr': {'class':
                                            'form-control form-control-lg'}} ) }}
                                        </div>
                                        <label class="form-label" for="form3Example1m1">Mot de passe</label>
                                        {{ form_errors(proRegistrationForm.plainPassword.first) }}
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        {{ form_widget(proRegistrationForm.plainPassword.second, {'attr': {'class':
                                        'form-control form-control-lg'}} ) }}
                                        <label class="form-label" for="form3Example1n1">Confirmation du mot de
                                            passe</label>
                                        {{ form_errors(proRegistrationForm.plainPassword.second) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        {{ form_widget(proRegistrationForm.town, {'attr': {'class': 'form-control
                                        form-control-lg'}}) }}
                                        <label class="form-label" for="form3Example1n1">Ville</label>
                                        {{ form_errors(proRegistrationForm.town) }}
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        {{ form_widget(proRegistrationForm.district, {'attr': {'class':
                                        'form-control
                                        form-control-lg'}}) }}
                                        <label class="form-label" for="form3Example1n1">Quartier</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        {{ form_widget(proRegistrationForm.companyName, {'attr': {'class':
                                        'form-control
                                        form-control-lg'}}) }}
                                        <label class="form-label" for="form3Example1n1">Nom de l'entreprise</label>
                                        {{ form_errors(proRegistrationForm.companyName) }}
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        {{ form_widget(proRegistrationForm.companyDescription, {'attr': {'class':
                                        'form-control
                                        form-control-lg'}}) }}
                                        <label class="form-label" for="form3Example1n1">Description</label>
                                        {{ form_errors(proRegistrationForm.companyDescription) }}
                                    </div>
                                </div>
                            </div>

                            {# <div class="row">
                                <div class="col-md-6 mb-4">
                                    <select class="form-control form-control-lg select">
                                        <option value="1">Ville</option>
                                        <option value="2">Douala</option>
                                        <option value="3">Abidjan</option>
                                        <option value="4">Dakar</option>
                                    </select>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <select class="form-control form-control-lg select">
                                        <option value="1">Quartier</option>
                                        <option value="2">Banyangui</option>
                                        <option value="3">Akwa</option>
                                        <option value="4">Bell</option>
                                    </select>
                                </div>
                            </div> #}

                            <div class="">
                                <div class="form-outline">
                                    {{ form_widget(proRegistrationForm.agreeTerms) }}
                                    <label class="form-label" for="form3Example1n1">Accepter les conditions
                                        d'utilisation</label>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center pt-3">
                                <button type="submit" class="btn btn-success btn-lg ms-2">Valider | <i class="bi bi-person-check-fill"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{ form_end(proRegistrationForm) }}

{% endblock %}