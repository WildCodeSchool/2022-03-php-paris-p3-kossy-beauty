{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

<div class="accordion" id="accordionExample">
    <div class="">
        <div class="d-flex justify-content-evenly">
            <h2 class="" id="headingOne">
                <button class="btn-admin btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Clients
                </button>
            </h2>
            <h2 class="" id="headingTwo">
                <button class="btn-admin btn btn-success collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Prestataires
                </button>
            </h2>
            <h2 class="" id="headingThree">
                <button class="btn-admin btn btn-success collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                Administrateurs
                </button>
            </h2>
            <button class="btn btn-outline-success"><a class="text-dark text-decoration-none" href="{{ path('app_register') }}">Ajouter utilisateur <i class="bi bi-plus"></i></a></button>       
            <button class="btn btn-outline-success"><a class="text-dark text-decoration-none" href="{{ path('app_category_new') }}">Ajouter catégorie <i class="bi bi-plus"></i></a></button>   
            <button class="btn btn-outline-success"><a class="text-dark text-decoration-none" href="{{ path('app_service_new') }}">Ajouter service <i class="bi bi-plus"></i></a></button>     
        </div>
        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Téléphone</th>
                    <th scope="col">Email</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Quartier</th>
                    <th scope="col">Rôle</th>
                </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        {% for role in user.roles %}
                            {% if 'ROLE_USER' in user.roles and user.roles|length < 2 %}
                                <tr>
                                    <th scope="row">{{ user.id }}</th>
                                    <td>{{ user.firstname }}</td>
                                    <td>{{ user.lastname }}</td>
                                    <td>{{ user.telephone }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.town }}</td>
                                    <td>{{ user.district }}</td>
                                    <td>{{ role }}</td>
                                    <td>
                                        <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button class="btn btn-light border b-1"><i class="bi bi-trash"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>
    <div class="">

      <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
        <div class="accordion-body">
