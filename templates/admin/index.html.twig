{% extends 'base.html.twig' %} {% block title %}Hello AdminController!{%
endblock %} {% block body %}

<div class="accordion" id="accordionExample">
    <div class="d-flex justify-content-evenly">
        <h2 class="" id="headingOne">
            <button
                class="btn-admin btn btn-success"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapseOne"
                aria-expanded="true"
                aria-controls="collapseOne"
            >
                Clients
            </button>
        </h2>
        <h2 class="" id="headingTwo">
            <button
                class="btn-admin btn btn-success collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapseTwo"
                aria-expanded="false"
                aria-controls="collapseTwo"
            >
                Prestataires
            </button>
        </h2>
        <h2 class="" id="headingThree">
            <button
                class="btn-admin btn btn-success collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapseThree"
                aria-expanded="false"
                aria-controls="collapseThree"
            >
                Administrateurs
            </button>
        </h2>
        <h2 class="" id="headingFour">
            <button
                class="btn-admin btn btn-success collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapseFour"
                aria-expanded="false"
                aria-controls="collapseFour"
            >
                Categories
            </button>
        </h2>
        <h2 class="" id="headingFive">
            <button
                class="btn-admin btn btn-success collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapseFive"
                aria-expanded="false"
                aria-controls="collapseFive"
            >
                Services
            </button>
        </h2>
        <h2 class="" id="headingSix">
            <button
                class="btn-admin btn btn-success collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapseSix"
                aria-expanded="false"
                aria-controls="collapseSix"
            >
                Mail de contact / Copyright
            </button>
        </h2>
    </div>
    <div class="">
        <div
            id="collapseOne"
            class="accordion-collapse collapse show"
            aria-labelledby="headingOne"
            data-bs-parent="#accordionExample"
        >
            <div class="accordion-body">
                <button class="btn btn-outline-success">
                    <a
                        class="text-dark text-decoration-none"
                        href="{{ path('app_register') }}"
                        >Ajouter utilisateur <i class="bi bi-plus"></i
                    ></a>
                </button>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Téléphone</th>
                            <th scope="col">Email</th>
                            <th scope="col">Ville</th>
                            <th scope="col">Quartier</th>
                            <th scope="col">Rôle</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %} {% for role in user.roles %} {%
                        if 'ROLE_USER' in user.roles and user.roles|length < 2
                        %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.telephone }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.town }}</td>
                            <td>{{ user.district }}</td>
                            <td>{{ role }}</td>
                            <td>
                                <form
                                    method="post"
                                    action="{{
                                        path('app_user_delete', { id: user.id })
                                    }}"
                                    onsubmit="return confirm('Are you sure you want to delete this item?');"
                                >
                                    <input
                                        type="hidden"
                                        name="_token"
                                        value="{{ csrf_token('delete' ~ user.id) }}"
                                    />
                                    <button class="btn btn-light border b-1">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endif %} {% endfor %} {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="">
        <div
            id="collapseTwo"
            class="accordion-collapse collapse"
            aria-labelledby="headingTwo"
            data-bs-parent="#accordionExample"
        >
            <div class="accordion-body">
                <button class="btn btn-outline-success">
                    <a
                        class="text-dark text-decoration-none"
                        href="{{ path('app_register') }}"
                        >Ajouter utilisateur <i class="bi bi-plus"></i
                    ></a>
                </button>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Téléphone</th>
                            <th scope="col">Email</th>
                            <th scope="col">Ville</th>
                            <th scope="col">Quartier</th>
                            <th scope="col">Rôle</th>
                            <th scope="col">En avant</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %} {% for role in user.roles %} {%
                        if role == 'ROLE_PROVIDER' %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.telephone }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.town }}</td>
                            <td>{{ user.district }}</td>
                            <td>{{ role }}</td>
                            <td class="text-center">
                                {% if user.isTop %}
                                <a class="btn border b-1 color-green"
                                {% else %}
                                <a class="btn border b-1 color-red"
                                {% endif %}
                                 href="{{ path('app_admin_is_top', {id:user.id}) }}"><i class="bi bi-arrow-up-square"></i>
                                </a>
                            </td>
                            <td>
                                <form
                                    method="post"
                                    action="{{
                                        path('app_user_delete', { id: user.id })
                                    }}"
                                    onsubmit="return confirm('Are you sure you want to delete this item?');"
                                >
                                    <input
                                        type="hidden"
                                        name="_token"
                                        value="{{ csrf_token('delete' ~ user.id) }}"
                                    />
                                    <button class="btn btn-light border b-1">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endif %} {% endfor %} {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="">
        <div
            id="collapseThree"
            class="accordion-collapse collapse"
            aria-labelledby="headingThree"
            data-bs-parent="#accordionExample"
        >
            <div class="accordion-body">
                <button class="btn btn-outline-success">
                    <a
                        class="text-dark text-decoration-none"
                        href="{{ path('app_register') }}"
                        >Ajouter utilisateur <i class="bi bi-plus"></i
                    ></a>
                </button>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Téléphone</th>
                            <th scope="col">Email</th>
                            <th scope="col">Ville</th>
                            <th scope="col">Quartier</th>
                            <th scope="col">Rôle</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %} {% for role in user.roles %} {%
                        if role == 'ROLE_ADMIN' %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.telephone }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.town }}</td>
                            <td>{{ user.district }}</td>
                            <td>{{ role }}</td>
                            <td>
                                <form
                                    method="post"
                                    action="{{
                                        path('app_user_delete', { id: user.id })
                                    }}"
                                    onsubmit="return confirm('Are you sure you want to delete this item?');"
                                >
                                    <input
                                        type="hidden"
                                        name="_token"
                                        value="{{ csrf_token('delete' ~ user.id) }}"
                                    />
                                    <button class="btn btn-light border b-1">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endif %} {% endfor %} {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="">
        <div
            id="collapseFour"
            class="accordion-collapse collapse"
            aria-labelledby="headingFour"
            data-bs-parent="#accordionExample"
        >
            <div class="accordion-body">
                <button class="btn btn-outline-success">
                    <a
                        class="text-dark text-decoration-none"
                        href="{{ path('app_category_new') }}"
                        >Ajouter catégorie <i class="bi bi-plus"></i
                    ></a>
                </button>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Nom</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                        <tr>
                            <td>{{ category.name }}</td>
                            <td>
                                <form
                                    method="post"
                                    action="{{
                                        path('app_category_edit', {
                                            id: category.id
                                        })
                                    }}"
                                >
                                    <button class="btn btn-light border b-1">
                                        <i class="bi bi-gear"></i>
                                    </button>
                                </form>
                            </td>
                            <td>
                                <form
                                    method="post"
                                    action="{{
                                        path('app_category_delete', {
                                            id: category.id
                                        })
                                    }}"
                                    onsubmit="return confirm('Are you sure you want to delete this item?');"
                                >
                                    <input
                                        type="hidden"
                                        name="_token"
                                        value="{{ csrf_token('delete' ~ category.id) }}"
                                    />
                                    <button class="btn btn-light border b-1">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="">
        <div
            id="collapseFive"
            class="accordion-collapse collapse"
            aria-labelledby="headingFive"
            data-bs-parent="#accordionExample"
        >
            <div class="accordion-body">
                <button class="btn btn-outline-success">
                    <a
                        class="text-dark text-decoration-none"
                        href="{{ path('app_service_new') }}"
                        >Ajouter service <i class="bi bi-plus"></i
                    ></a>
                </button>

                <div class="accordion mt-2" id="accordionServices">
                    <div class="accordion-item">
                        <div class="d-flex justify-content-center">
                    {% for category in categories %}
                        <h2 class="accordion-header" id="heading{{ category.id }}">
                            <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ category.id }}" aria-expanded="true" aria-controls="collapse{{ category.id }}">
                                {{ category.name }} <i class="bi bi-caret-down"></i>
                            </button>
                        </h2>
                        {% endfor %}
                    </div>
                    {% for category in categories %}
                        <div id="collapse{{ category.id }}" class="accordion-collapse collapse" aria-labelledby="heading{{ category.id }}" data-bs-parent="#accordionServices">
                            <div class="accordion-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Nom</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for service in category.services %}
                                        <tr>
                                            <td><img src="{{ vich_uploader_asset(service) }}" alt="{{ service.name }}" class="rounded-circle" width="40"></td>
                                            <td>{{ service.name }}</td>
                                            <td>
                                                <a class="btn btn-light border b-1" href="{{
                                                    path('app_service_edit', {
                                                        id: service.id
                                                    })
                                                }}"><i class="bi bi-gear"></i></a>
                                            </td>
                                            <td>
                                                <form
                                                    method="post"
                                                    action="{{
                                                        path('app_service_delete', {
                                                            id: service.id
                                                        })
                                                    }}"
                                                    onsubmit="return confirm('Are you sure you want to delete this item?');"
                                                >
                                                    <input
                                                        type="hidden"
                                                        name="_token"
                                                        value="{{ csrf_token('delete' ~ service.id) }}"
                                                    />
                                                    <button class="btn btn-light border b-1">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div
            id="collapseSix"
            class="accordion-collapse collapse w-50 mt-4"
            aria-labelledby="headingSix"
            data-bs-parent="#accordionExample"
        >
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Mail de contact</th>
                        <th scope="col">Copyright</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            {{ contactMail }}
                        </td>
                        <td>
                            {{ copyright }}
                        </td>
                        <td>
                            <a href="{{ path('app_contact_mail_and_copyright_edit', {id: contactMailCopyright.id }) }}"><i class="bi bi-gear"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
    </div>
</div>

{% endblock %}
