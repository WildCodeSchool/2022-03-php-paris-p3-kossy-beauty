{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
 
<div class="container ">
    <ul class="d-flex list-unstyled justify-content-evenly">
        <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample1" aria-expanded="false" aria-controls="collapseExample1">Clients</button>

        <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample2" aria-expanded="false" aria-controls="collapseExample2">Prestataires</button>
        <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample3" aria-expanded="false" aria-controls="collapseExample3">Administrateurs</button>
        <button class="btn btn-outline-success"><a class="text-dark text-decoration-none" href="{{ path('app_user_new') }}">Ajouter utilisateur <i class="bi bi-plus"></i></a></button>       
        <button class="btn btn-outline-success"><a class="text-dark text-decoration-none" href="{{ path('app_category_new') }}">Ajouter catégorie <i class="bi bi-plus"></i></a></button>   
        <button class="btn btn-outline-success"><a class="text-dark text-decoration-none" href="{{ path('app_service_new') }}">Ajouter service <i class="bi bi-plus"></i></a></button>      
    </ul>
</div>
<div class="col">
    <div class="collapse" id="collapseExample1">
        <div class="card card-body">
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Ville</th>
                        <th scope="col">Quartier</th>
                        <th scope="col">Rôle</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            {% for role in user.roles %}
                                {% if 'ROLE_USER' in user.roles and user.roles|length < 2 %}
                                    <tr>
                                        <th scope="row">{{ user.id }}</th>
                                        <td>{{ user.firstname }}</td>
                                        <td>{{ user.lastname }}</td>
                                        <td>{{ user.telephone }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.town }}</td>
                                        <td>{{ user.district }}</td>
                                        <td>{{ role }}</td>
                                        <td>
                                            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button class="btn btn-light border b-1"><i class="bi bi-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div> 
        </div>
    </div>
</div>
