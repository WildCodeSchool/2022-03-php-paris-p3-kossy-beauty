{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
 
<div class="container ">
    <ul class="d-flex list-unstyled justify-content-evenly">
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample1" aria-expanded="false" aria-controls="collapseExample1">Clients</button>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample2" aria-expanded="false" aria-controls="collapseExample2">Prestataires</button>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample3" aria-expanded="false" aria-controls="collapseExample3">Administrateurs</button>
    </ul>
</div>
<div class="col">
    <div class="collapse" id="collapseExample1">
        <div class="card card-body">
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Ville</th>
                        <th scope="col">Quartier</th>
                        <th scope="col">Rôle</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            {% for role in user.roles %}
                                {% if 'ROLE_USER' in user.roles and user.roles|length < 2 %}
                                    <tr>
                                        <th scope="row">{{ user.id }}</th>
                                        <td>{{ user.firstname }}</td>
                                        <td>{{ user.lastname }}</td>
                                        <td>{{ user.telephone }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.town }}</td>
                                        <td>{{ user.district }}</td>
                                        <td>{{ role }}</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div> 
        </div>
    </div>
</div>
<div class="col">
    <div class="collapse" id="collapseExample2">
        <div class="card card-body">
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            {% for role in user.roles %}
                                {% if role == 'ROLE_PROVIDER' %}
                                    <tr>
                                        <th scope="row">{{ user.id }}</th>
                                        <td>{{ user.firstname }}</td>
                                        <td>{{ user.lastname }}</td>
                                        <td>{{ role }}</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div> 
        </div>
    </div>
</div>
<div class="col">
    <div class="collapse" id="collapseExample3">
        <div class="card card-body">
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            {% for role in user.roles %}
                                {% if role == 'ROLE_ADMIN' %}
                                    <tr>
                                        <th scope="row">{{ user.id }}</th>
                                        <td>{{ user.firstname }}</td>
                                        <td>{{ user.lastname }}</td>
                                        <td>{{ role }}</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div> 
        </div>
    </div>
</div>
{% endblock %}
