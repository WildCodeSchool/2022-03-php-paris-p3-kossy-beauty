{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Mon profil</h1>

    <table class="table">
        <tbody>
            {% if is_granted("ROLE_ADMIN") %}
                <tr>
                    <th>Identifiant</th>
                    <td>{{ user.id }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>********</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.town }}</td>
            </tr>
            <tr>
                <th>District</th>
                <td>{{ user.district }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ user.image }}</td>
            </tr>
            {% if is_granted("ROLE_ADMIN") %}
                <tr>
                    <th>Type de compte</th>
                    <td>{{ role }}</td>
                </tr>
                <tr>
                    <th>Featured</th>
                    <td>{{ user.isTop ? 'Oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <th>Compte archivé</th>
                    <td>{{ user.isArchived ? 'Oui' : 'Non' }}</td>
                </tr>
            {% endif %}
            {% if is_granted("ROLE_PROVIDER") %}
                <tr>
                    <th>Nom du prestataire</th>
                    <td>{{ user.companyName }}</td>
                </tr>
                <tr>
                    <th>Description du prestataire</th>
                    <td>{{ user.companyDescription }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">Retour</a>
    
    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Editer</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
