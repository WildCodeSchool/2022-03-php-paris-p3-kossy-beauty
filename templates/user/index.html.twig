{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Telephone</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>CompanyName</th>
                <th>Email</th>
                <th>Town</th>
                <th>District</th>
                <th>Image</th>
                <th>IsTop</th>
                <th>IsArchived</th>
                <th>CompanyDescription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.companyName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.town }}</td>
                <td>{{ user.district }}</td>
                <td>{{ user.image }}</td>
                <td>{{ user.isTop ? 'Yes' : 'No' }}</td>
                <td>{{ user.isArchived ? 'Yes' : 'No' }}</td>
                <td>{{ user.companyDescription }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_register') }}">Create new</a>
{% endblock %}
